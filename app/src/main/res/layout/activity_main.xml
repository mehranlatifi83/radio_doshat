<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"	
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سلام، به اپلیکیشن اختصاصی رادیو دو شات خوش آمدین"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/statusBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/welcomeMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="پخش"
        app:layout_constraintTop_toBottomOf="@id/statusBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/supportLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ارتباط با پشتیبانی"
        android:textColor="?attr/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openSupportLink"
        app:layout_constraintTop_toBottomOf="@id/playButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/telegramLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="دنبال کردن در تلگرام"
        android:textColor="?attr/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openTelegramLink"
        app:layout_constraintTop_toBottomOf="@id/supportLink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/instagramLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="دنبال کردن در اینستاگرام"
        android:textColor="?attr/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openInstagramLink"
        app:layout_constraintTop_toBottomOf="@id/telegramLink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

</androidx.constraintlayout.widget.ConstraintLayout>